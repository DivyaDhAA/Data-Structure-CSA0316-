//Find Factorial using recursion
#include <stdio.h>
int rec(int a){
	if(a==0)
	return 0;
	else if(a==1)
	return 1;
	else
	return a*rec(a-1);
}
int main() {
	("Name: Divyadharshini\nReg no: 192324031\n");
    int n;
    printf("Enter the number: ");
    scanf("%d", &n);
    printf("\nThe factorial of the given number is %d ",rec(n));
    return 0;
}
